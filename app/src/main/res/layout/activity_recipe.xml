<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecipeActivity">

    <ImageView
        android:id="@+id/item_img"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:background="#F6F6F6"
        android:hapticFeedbackEnabled="true"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pizza_sample"/>

    <ImageView
        android:id="@+id/shadow"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="@+id/item_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/item_img"
        app:srcCompat="@drawable/image_btm_overlay"
        android:hapticFeedbackEnabled="true"/>

    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_icon"
        android:clickable="true"
        android:padding="4dp"
        android:foregroundGravity="center"
        android:background="@drawable/card_back_btn"/>

    <ImageView
        android:id="@+id/full_size"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="20dp"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/back_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/back_btn"
        app:srcCompat="@drawable/full_size_ic"
        app:tint="@color/white" />

    <!-- Make the entire RelativeLayout scrollable by wrapping it in a ScrollView -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_img"
        android:background="@drawable/card_recipe"
        android:layout_marginTop="-12dp"
        >

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-12dp"
            android:background="@drawable/card_recipe"
            >

            <TextView
                android:id="@+id/title_recipe_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="45dp"
                android:fontFamily="@font/poppins"
                android:text="I am sample text"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_ing"
                android:layout_width="150dp"
                android:layout_height="42dp"
                android:layout_alignParentStart="true"
                android:layout_below="@id/title_recipe_page"
                android:layout_marginTop="16dp"
                android:layout_marginStart="42dp"
                android:fontFamily="@font/poppins"
                android:textColor="@color/white"
                android:background="@drawable/btn_ing"
                android:paddingHorizontal="20dp"
                android:text="Ingredients" />

            <ScrollView
                android:id="@+id/ing_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_ing"
                android:layout_alignParentStart="true"
                android:padding="10dp">

                <TableLayout
                    android:id="@+id/ingredients_table"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="1,2,3"
                    android:layout_marginTop="16dp"
                    android:padding="8dp"
                    android:background="#f2f2f2"
                    android:divider="@android:color/darker_gray"
                    android:showDividers="middle">

                    <!-- Header Row -->
                    <TableRow>

                        <TextView
                            android:id="@+id/col1"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:background="#ddd"
                            android:padding="8dp"
                            android:text="col1"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/col2"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:background="#ddd"
                            android:padding="8dp"
                            android:text="col2"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/col3"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:background="#ddd"
                            android:padding="8dp"
                            android:text="col3"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/col4"
                            android:text="col3"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:background="#ddd" />
                    </TableRow>
                </TableLayout>

            </ScrollView>

            <TextView
                android:id="@+id/ingredients_end_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ing_scroll_view"
                android:layout_marginTop="10dp"
                android:layout_alignParentStart="true"
                android:paddingStart="10dp"
                android:text="Protein Add Ons(Any one) : Paneer/Chicken/Tofu/Soya (80gms)"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="italic|bold"
                android:visibility="invisible"/>

            <Button
                android:id="@+id/btn_steps"
                android:layout_width="150dp"
                android:layout_height="42dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/title_recipe_page"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="42dp"
                android:fontFamily="@font/poppins"
                android:textColor="@color/black"
                android:background="@android:color/transparent"
                android:paddingHorizontal="20dp"
                android:text="Steps" />

            <ScrollView
                android:id="@+id/steps_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_steps"
                android:layout_alignParentStart="true"
                android:padding="10dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/steps_data"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:lineSpacingExtra="10dp"
                        android:layout_marginTop="12dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/important_ingredients_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Important Ingredients"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginTop="16dp"
                        android:visibility="gone"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/important_ingredients_data"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="15sp"
                        android:layout_marginTop="8dp"
                        android:visibility="gone"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/suggested_pairing_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Suggested Pairing"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginTop="16dp"
                        android:visibility="gone"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/suggested_pairing_data"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="15sp"
                        android:layout_marginTop="8dp"
                        android:visibility="gone"
                        android:textColor="@color/black"/>

                </LinearLayout>

            </ScrollView>

        </RelativeLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
